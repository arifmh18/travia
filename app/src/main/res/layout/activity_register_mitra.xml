<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_mi"
    tools:context=".RegisterMitra">

    <View
        android:id="@+id/ellipse_5"
        android:layout_width="327dp"
        android:layout_height="351dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="-174dp"
        android:background="@drawable/ellipse_5" />

    <View
        android:id="@+id/ellipse_4"
        android:layout_width="312dp"
        android:layout_height="269dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-132dp"
        android:layout_marginTop="-42dp"
        android:background="@drawable/ellipse_4" />

    <TextView
        android:id="@+id/travia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="2dp"
        android:text="@string/app_name"
        android:textAppearance="@style/travia" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/travia"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/register"
        android:textAppearance="@style/register" />

    <TextView
        android:id="@+id/userRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="117dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Required"
        android:textAppearance="@style/register" />

    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userRole"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="@dimen/mr_top"
        android:background="@drawable/rectangle_1"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:textColor="#000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rectangle_2"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="@dimen/mr_top"
        android:adjustViewBounds="true"
        android:background="@drawable/rectangle_1"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

            <Spinner
                android:id="@+id/jk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rectangle_1"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="@dimen/mr_top"
        android:background="@drawable/rectangle_1"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No.Telp"
            android:textColor="#000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/notelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rectangle_3"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="@dimen/mr_top"
        android:background="@drawable/rectangle_1"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <Spinner
            android:id="@+id/SpinRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rectangle_4"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="@dimen/mr_top"
        android:background="@drawable/register"
        android:elevation="10dp"
        android:text="Simpan"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
</RelativeLayout>