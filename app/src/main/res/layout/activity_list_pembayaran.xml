<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListPembayaran">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp">
            <View
                android:id="@+id/icon_naviga"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_panah"
                />

            <TextView
                android:id="@+id/pilih_metod"
                android:layout_width="172dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="-8dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/pilih_metod"
                android:textAppearance="@style/pilih_metod" />


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">
        <TextView
            android:id="@+id/dimohon_unt"
            android:layout_width="222dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="@string/dimohon_unt"
            android:textAppearance="@style/dimohon_unt"
            android:gravity="center_horizontal|center_vertical"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="500dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="23dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">
            <TextView
                android:layout_width="220dp"
                android:layout_height="44dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="14dp"
                android:text=" Pilih Metode Pembayaran" />

            <Button
                android:id="@+id/gopay"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/rectage3"
                android:drawableLeft="@drawable/ic__logo_gopay"
                android:padding="16dp"
                android:text="Klik Ke Gopay" />

            <Button
                android:id="@+id/dana"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/rectage3"
                android:drawableLeft="@drawable/ic_logo_dana"
                android:padding="16dp"
                android:text="Klik Ke Dana" />
            <Button
                android:id="@+id/ovo"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="210dp"
                android:background="@drawable/rectage3"
                android:drawableLeft="@drawable/ic_logo_ovo"
                android:padding="16dp"
                android:text="Klik Ke OVO" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>