<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDestinationItem"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/wisata_pujon_kidul"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvNameDestinationItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Wisata"
            android:textSize="16sp"
            android:textAppearance="@style/LoginTitle"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvPriceDestinationItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 50xxxxx"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/LoginTitle"
            android:textSize="12sp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="4dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bordered"
                android:padding="5dp"
                android:src="@drawable/ic_smart_cart" />

            <ImageView
                android:id="@+id/ivMoreDestinationItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center|end"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_baseline_more_horiz_24" />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>