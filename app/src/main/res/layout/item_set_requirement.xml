<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/edtRequirementName"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textAppearance="@style/LoginTitle"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Nama persyaratan"/>

            <TextView
                android:id="@+id/tvRequiredRequirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/LoginTitle"
                android:textSize="16sp"
                android:layout_weight="0.2"
                android:text="Opsional"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/ivRequirementEdit"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_edit_24"/>

            <ImageView
                android:id="@+id/ivRequirementDelete"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_delete_24"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>